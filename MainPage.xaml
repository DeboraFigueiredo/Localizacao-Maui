<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Localizacao.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:Localizacao.ViewModel"
    x:DataType="viewmodel:MainPageViewModel"
    BackgroundColor="Black">

    <ScrollView>
        <VerticalStackLayout>    
            <Image Source="location.png" Margin="0,80,0,0" />
            <Button
                BackgroundColor="LightGray"
                Margin="0,40,0,0"
                Command="{Binding CheckLocationCommand}"
                HorizontalOptions="Center"
                Text="Mostre minha localização"
                FontSize="24"
                LineBreakMode="WordWrap"
                TextColor="black"
                FontAttributes="Bold"
                VerticalOptions="Center"
                WidthRequest="250" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
